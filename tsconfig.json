{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "noEmit": false,
    "declaration": false,
    "strictNullChecks": false,
    "outDir" : "./.tsbuild",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "lib" : [
    "es6",
    "dom",
    "ES2017"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
